    echo 'imp.close();'                                                            >> $resultmacro${resultmacro_number}.js
    echo '}'                                                                       >> $resultmacro${resultmacro_number}.js
    echo $resultmacro_number
    let resultmacro_number=$resultmacro_number+1         
done < dirlist



#.................................................................................
